{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>chukysoria/renovate-config",
    "local>chukysoria/renovate-config:docker-build",
    "local>chukysoria/renovate-config:os-package(ubuntu_22_04)"
  ],
  "customManagers": [
    {
      "fileMatch": [
        "(^|/)Dockerfile$",
        "(^|/)config.yaml$"
      ],
      "matchStrings": [
        "ARG BUILD_EXT_RELEASE=[\"']?(?<currentValue>.+?)[\"']?\\s+",
        "ext_release: (?<currentValue>.+)\\s+"
      ],
      "versioningTemplate": "loose",
      "datasourceTemplate": "custom.sonarr",
      "depNameTemplate": "Sonarr"
    }
  ],
  "customDatasources": {
    "sonarr": {
      "defaultRegistryUrlTemplate": " http://services.sonarr.tv/v1/releases",
      "transformTemplates": [
        "{\"releases\":[$.*.{\"version\": $.version,\"releaseTimestamp\": $.releaseDate}],\"sourceUrl\": \"https://github.com/Sonarr/Sonarr\",\"homepage\": \"https://sonarr.tv/\"}"
      ]
    }
  }
}